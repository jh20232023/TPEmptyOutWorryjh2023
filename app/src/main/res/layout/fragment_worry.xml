<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#656b5d"
        android:fontFamily="@font/notosansbold"
        android:text="     감정 버리기"
        android:textSize="16sp"
        android:textColor="@color/white"/>
    <LinearLayout
        android:background="@drawable/bg_tv"
        android:padding="8dp"
        android:id="@+id/layout"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_angry"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/angry"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:id="@+id/iv_sad"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/sad"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp" />
        <ImageView
            android:id="@+id/iv_sick"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/sosick"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp" />
        <ImageView
            android:id="@+id/iv_longface"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/longface"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp" />
        <ImageView
            android:id="@+id/iv_despair"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/despair_face"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

    <ImageView
        android:layout_above="@id/tv_title"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/angry"/>
    <TextView
        android:id="@+id/tv_text"
        android:layout_marginTop="15dp"
        android:layout_below="@id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="버리고 싶은 감정을 선택 하세요!"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:fontFamily="@font/notosansbold"
        android:includeFontPadding="false"/>
    <ImageView
        android:id="@+id/iv_emoji"
        android:layout_marginTop="5dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/angry"
        android:layout_below="@id/tv_text"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="250dp"
        android:layout_height="380dp"
        android:layout_below="@id/tv_text"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/rrremovebg"/>





</RelativeLayout>