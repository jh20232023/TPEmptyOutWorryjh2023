<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 여기에 버린 감정들 이에요.."
        android:fontFamily="@font/notosansbold"
        android:textSize="13sp"
        android:layout_marginTop="6dp"
        android:padding="4dp"
        android:layout_alignStart="@id/layout"
        android:includeFontPadding="false"/>
    <LinearLayout
        android:background="@drawable/bg_tv"
        android:padding="8dp"
        android:layout_marginTop="6dp"
        android:id="@+id/layout"
        android:layout_below="@id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_angry"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/angry"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tv_angry_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X10"
            android:fontFamily="@font/notosansbold"
            android:includeFontPadding="false"
            android:layout_marginLeft="4dp"
            android:textSize="12sp"
            android:layout_gravity="bottom"/>
        <ImageView
            android:id="@+id/iv_sad"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/sad"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="5dp" />
        <TextView
            android:id="@+id/tv_sad_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X10"
            android:textSize="12sp"
            android:fontFamily="@font/notosansbold"
            android:includeFontPadding="false"
            android:layout_marginLeft="4dp"
            android:layout_gravity="bottom"/>
        <ImageView
            android:id="@+id/iv_sick"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/sosick"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="5dp" />
        <TextView
            android:id="@+id/tv_sick_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X10"
            android:textSize="12sp"
            android:fontFamily="@font/notosansbold"
            android:includeFontPadding="false"
            android:layout_marginLeft="4dp"
            android:layout_gravity="bottom"/>
        <ImageView
            android:id="@+id/iv_longface"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/longface"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tv_longface_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X10"
            android:textSize="12sp"
            android:fontFamily="@font/notosansbold"
            android:includeFontPadding="false"
            android:layout_marginLeft="4dp"
            android:layout_gravity="bottom"/>
        <ImageView
            android:id="@+id/iv_despair"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/despair_face"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tv_despair_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X10"
            android:textSize="12sp"
            android:fontFamily="@font/notosansbold"
            android:includeFontPadding="false"
            android:layout_marginLeft="4dp"
            android:layout_gravity="bottom"/>
    </LinearLayout>


</RelativeLayout>